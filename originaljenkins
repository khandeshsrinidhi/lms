// k8s Jenkins file for frontend before starting this pipeline modify .env file with backend url //
pipeline {
    agent any
    environment {
    DOCKERHUB_CREDENTIALS = credentials('docker-hub1')
    }
    stages {
        stage('Building the docker image') {
            steps {
                sh 'cd webapp && docker build -t srinidhi3108/web .'
            }
        }
        stage('Logging into dockerhub account') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('pushing the docker image into dockerhub') 
             {
            steps {
                  sh 'docker push srinidhi3108/web'
            }
        }
        stage('Remove old docker images') {
            steps {
                 sh 'docker rmi -f srinidhi3108/web'
            }
        }
        stage('frontend deployment') {
            steps {
                sh 'cd k8s && kubectl apply -f web-deployment.yml'
            }
        }
        stage('frontend lb-service') {
            steps {
                sh 'cd k8s && kubectl apply -f web-lb-service.yml'
            }
        }         
    }
}
